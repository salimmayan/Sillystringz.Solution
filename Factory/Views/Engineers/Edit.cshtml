@{

  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Edit</h2>

<h4>Edit Engineer: <span class="olive">@Html.DisplayFor(model => model.EngineerName)</span></h4>
<br>
<div class="divClass">
  @using (Html.BeginForm())

  {
    @Html.HiddenFor(model => model.EngineerId)
    <br>
    <p><span class="left olive2">@Html.Label("Engineer Name")</span> <span class="right olive2">
        @Html.EditorFor(model => model.EngineerName)</span></p>
    <br>

    <p><span class="left olive2">@Html.Label("Engineer Title")</span> <span class="right olive2">
        @Html.EditorFor(model => model.EngineerTitle)</span></p>
    <br><br><br>
    <input type="submit" class="btn btn-default" value="Save Edits" />

  }

  <br><br><br>
  <p>@Html.ActionLink("Back to list of Engineers", "Index")</p>
</div>