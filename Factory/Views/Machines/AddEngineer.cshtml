@{
  Layout = "_Layout";
}
@using Factory.Models
@model Factory.Models.Machine


@ViewBag.EngineerInfo

<h2>Add Engineer to Machine</h2>

<h4>Add a Engineer to Machine <span class="olive">@Html.DisplayFor(model => model.MachineName)</span></h4>
<br>
<div class="divClass">
  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)
    <br>
    <p><span class="left olive2">@Html.Label("Select Engineer")</span> <span class="right olive2">
        @Html.DropDownList("EngineerID")</span></p>
    <br>
    <br><br><br>
    <input type="submit" class="btn btn-default" value="Add Engineer to Machine" />
  }

  <p>@Html.ActionLink("Back to Machine Details page", "Details", new {id = Model.MachineId })</p>

</div>